<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="content">
	<name>Content - Scontent</name>
  	<author>Juan Padial</author>
  	<creationDate>November, 2010</creationDate>
      <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL 3</license>
  	<authorUrl>www.shikle.com</authorUrl>
	<version>1.0 RC2</version>
	<description>Content - Joomla Ajax jQuery Vote up/down plugin, share and tagging Plugin.</description>
	<files>
		<filename plugin="scontent">scontent.php</filename>
		<filename>scontent/index.html</filename>
    	      <filename>scontent/scontent.php</filename>
		<filename>scontent/css/scontent.css</filename>
		<filename>scontent/css/index.html</filename>
		<filename>scontent/images/index.html</filename>
		<filename>scontent/images/btn-overlay.png</filename>
		<filename>scontent/images/loading.gif</filename>
		<filename>scontent/images/sprite2.png</filename>
		<filename>scontent/images/tags.png</filename>
		<filename>scontent/js/index.html</filename>
	      <filename>scontent/js/scontent.js</filename>
		<filename>scontent/js/jquery-1.4.2_min.js</filename>
	</files>
	<languages>
    	 <language tag="en-GB">en-GB.plg_content_scontent.ini</language>
    	 <language tag="es-ES">es-ES.plg_content_scontent.ini</language>
	</languages>
	<params>
    <param name="check_dbtable" type="list" default="1" label="CHECK DB TABLE" description="CHECK DB TABLE DESCRIPTIONS">
      <option value="1">YES</option>
      <option value="0">NO</option>
    </param>
    <param name="load_jquery" type="list" default="yes" label="LOAD JQUERY" description="LOAD JQUERY DESCRIPTIONS">
      <option value="yes">YES</option>
      <option value="no">NO</option>
    </param>   		
	<param name="display_content" type="list" default="0" label="DISPLAY CONTENT" description="DISPLAY VOTING PLUGIN AFTER THE TITLE, AFTER THE CONTENT OR BEFORE THE CONTENT">
	  	<option value="0">AFTER TITLE</option>
	  	<option value="1">AFTER CONTENT</option>
	  	<option value="2">BEFORE TITLE</option>
   </param>       
	<param name="disable_guests" type="list" default="no" label="FOR REGISTERED" description="FOR REGISTERED USER ONLY">
	  	<option value="yes">YES</option>
	  	<option value="no">NO</option>
   </param>
    <param name="voting_period" type="list" default="12" label="VOTING PERIOD" description="SELECT WHEN USER MAY VOTE AGAIN">
      <option value="0">ALWAYS</option>
      <option value="once">ONCE</option>
      <option value="1">ONE DAY</option>
      <option value="7">ONE WEEK</option>
      <option value="14">TWO WEEKs</option>
      <option value="21">THREE WEEKS</option>
      <option value="31">ONE MONTH</option>
    </param>
    <param name="enable_view" type="list" default="all" label="ENABLE VIEW" description="ENABLE VIEW TYPE">
      <option value="all">ALL VIEWS</option>
      <option value="blog">BLOG VIEW</option>
      <option value="article">ARTICLE VIEW</option>
      <option value="frontpage">FRONTPAGE VIEW</option>
    </param>
    <param name="enable_sharing" type="list" default="1" label="ENABLE SHARING" description="ENABLE SHARING DESC">
      <option value="0">NO</option>
      <option value="1">YES</option>
    </param>
    <param name="addthis_account" type="text" size="40" default="" label="ADDTHIS_ACCOUNT" description="ADDTHIS_ACCOUNT DESC">
    </param>
    <param name="enable_tags" type="list" default="1" label="SHOW TAGS" description="SHOW TAGS DESC">
      <option value="0">NO</option>
      <option value="1">YES</option>
    </param>
    <param name="search_itemid" type="text" size="40" label="SEARCH ITEMID" description="SEARCH ITEMID DESC">
     </param>    
	<param name="disablesection" type="text" size="40" default="" label="DISABLE SECTION" description="DISABLE IN SECTION/s " />
  <param name="disablecategory" type="text" size="40" default="" label="DISABLE CATEGORY" description="DISABLE IN CATEGORY/s " />
  <param name="disablearticle" type="text" size="40" default="" label="DISABLE ARTICLE" description="DISABLE IN ARTICLE/s " />
    <param name="drop_dbtable" type="list" default="0" label="DROP VOTE TABLE" description="DROP VOTE TABLE DESC">
      <option value="0">NO</option>
      <option value="1">YES</option>
    </param>
 </params>
</install>